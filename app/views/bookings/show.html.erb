<div class="container" style="margin-top: 5em">
  <div>
    <%= link_to "< Bookings", dashboard_path %>
  <div>
    <h1><%= link_to @booking.space.name, space_path(@booking.space) %></h1>
  </div>
 

  <div class="w-75">
    <div class="info-container p-3" style="border-radius: 12px; background-color: lightgrey">
      <h5>Your visit:</h5>
      <h5><i class="fa fa-calendar"></i>
        <%= @booking.date.strftime("%a %d %b") %>
        <i class="fa fa-clock-o "></i>
        <%= @booking.date.strftime("%H:%M") %>
      </h5>
      <h5>Your info:</h5>
      <div>
        <h5><i class="fa fa-wrench"></i> 
          <%= @booking.item_description %>
        </h5>
        <h5><i class="fa fa-info-circle"></i> 
          <%= @booking.comment %>
        </h5>
        <div>
        <%= image_tag "https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.pocket-lint.com%2Fr%2Fs%2F970x%2Fassets%2Fimages%2F153836-headphones-news-bose-launches-its-gaming-headset-quietcomfort-35-ii-gaming-image1-7ayeqdlt8t.jpg&f=1&nofb=1", class: "w-25" %>
        </div>
      </div>
    </div>

    <hr>
  </div>

  <div id="chatbox" class="w-75">
    <h4>Messages</h4>
    <% unless @booking.messages.length > 0 %>
      <h5>Start chatting with <%= @booking.space.name %> now!</h5>
    <% end %>
    <div id="messages">
      <% @booking.messages.each do |message| %>
        <div class="message-container" id="message-<%= message.id %>">
          <i class="author">
          <span><%= message.user.full_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
          </i>
          <p><%= message.content %></p>
        </div>
      <% end %>
    </div>
    <div id="input-container">
      <%= simple_form_for [ @booking, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@booking.space.name}" %>
        <%= f.submit %>
      <% end %>
    </div>
    <hr>
  </div>


  <div class="w-85">
    <%# <%= render "shared/space_map"  %1> %>
  </div>

</div>
