<div class="space-banner">
  <h1><%= @space.name %></h1>
  <div class="d-flex">
    <%# if !@space.bookings.reviews.rating.nil? %>
      <p><%#= @space.bookings.reviews.rating %></p>
      <p class="ml-1"><i class="fas fa-map-marker-alt"></i> <%= @space.address %></p>
    <%# else %>
     <p><%#= @space.address %></p>
    <%# end %> 
    <p>
  </div>
  <div class="space-photo" style="border-radius: 15px w-75">
    <% if @space.photo.attached? %>
      <%= cl_image_tag @space.photo.key %>
    <% else %>
      <img src="https://res.cloudinary.com/chrisrg/image/upload/c_scale,w_702/v1614695131/refective/repair-shop1.jpg" />
    <% end %>
  </div>
</div>
