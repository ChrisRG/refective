<div class="container index-container" style="margin-top: 7em; width: 75%">
    <%= form_with url: spaces_path, method: :get, html: { autocomplete: "off" } do %>
      <%= select_tag("select-item-type-id", options_from_collection_for_select(ItemType.order(:name), "id", "name"), include_blank: "All", class: "select2", style: "width: 37.8%") %>
    <% end %>

  <div class="d-flex justify-content-center">

    <div class="cards card-index" style="margin-top: 1em">
      <% @spaces.each do |space| %>
        <%= link_to space_path(space), class: "card-links" do %>
          <%= render partial: "shared/space_index_card", locals: {space: space} %>
        <% end %>
      <% end %>
    </div>
    <div id="map" style="border-radius: 12px; margin-top: -2em" class="map-index"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      > 
    </div>
  </div>
</div>
