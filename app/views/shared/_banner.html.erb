<div class="banner">

  <div class="container" style="text-align: right">
    <h1 class="mb-2" >repair<br>your<br>stuff</h1>

    <div>

      <div class="search-form-control form-group">
        <select class="form-control string required" name="search[query]" id="search_query">
          <option value="" disabled selected>Select a category</option>
          <% @item_types.each do |item_type| %>
            <option> <%= item_type.name %></option>
          <% end %>
        </select>
      </div>

      <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
        <input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for nearby spaces"/>
        </div>
      </form>

      <div style="text-align: center">
        <%= link_to spaces_path, class: "btn btn-success", name: "button" do %>
          <i class="fas fa-search"></i> Search now
        <% end %>
      </div>

    </div>

    <div class=" banner-sub-header d-flex justify-content-center align-items-center pb-5">
      <h2 class="text-center">Help the environment and your wallet!</h2>
    </div>
  </div>

</div>
