<div class="container" style="margin-top: 5em">
  <h1>dashboard</h1>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="booking-tab" href="#bookings"data-toggle="tab" role="tab" aria-controls="booking" aria-selected="true">my bookings</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="space-tab" href="#spaces"data-toggle="tab" role="tab" aria-controls="space" aria-selected="false">my spaces</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="review-tab" href="#reviews"data-toggle="tab" role="tab" aria-controls="review" aria-selected="false">my reviews</a>
    </li>
    <li>
      <a class="nav-link" id="review-tab" href="#messages"data-toggle="tab" role="tab" aria-controls="message" aria-selected="false">messages</a>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="bookings" role="tabpanel" aria-labelledby="booking-tab">
      <div class="cards">
        <% if current_user.bookings.present? %>
        <% @bookings.each do |booking| %>
          <%= link_to space_path(booking.space), class: "card-links" do %>
            <%= render "shared/booking_card", booking: booking %>
          <% end %>
        <% end %>
        <% else %>
          <p>You haven't made any bookings yet!</p>
        <% end %>
      </div>
    </div>

    <div class="tab-pane fade" id="spaces" role="tabpanel" aria-labelledby="space-tab">
      <div class="cards">
      <% if current_user.spaces.exists? %>
        <% current_user.spaces.each do |space| %>
          <%= link_to space_path(space), class: "card-links" do %>
            <%= render "shared/dashboard_space_card", space: space %>
          <% end %>
        <% end %>
      <% else %>
        <p>You haven't created any space yet! Become a part of our community!</p>
      <% end %>
      <% if policy(Space).create? %>
        <%= link_to "Create a space", new_space_path, class: "btn btn-success" %>
      <% end %>
      </div>
    </div>

    <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="review-tab">
      <div class="mt-3 text-center">
        <p>Looks like you haven't left any reviews yet!</p>
      </div>
    </div>

    <div class="tab-pane fade" id="messages" role="tabpanel" aria-labelledby="message-tab">
      <%# <div class="mt-3 text-center">
        <p>You haven't started messaging yet!</p>
      </div> %>

        <%# <% current_user.bookings.last.messages.each do |message| %>
