            <%# <i class="author">
              <span><%= message.user.nickname %></span>
              <%# <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p><%#= message.content %></p>
          </div>
        <%# end %>
        <%#= render "shared/messages_show", message: @message  %> 
    </div>
  <%= render "shared/chat_card" %>
  </div>
</div>
